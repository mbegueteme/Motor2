<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/checkImageEdit"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_ic"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            android:visibility="gone"
            android:buttonTint="@color/black"
            android:layout_marginTop="3dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/check_edit_name"
            android:background="@drawable/ic_check"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           app:cardBackgroundColor="@color/teal_700"
            app:cardCornerRadius="15dp"
            android:id="@+id/cardPrincipal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative0">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:id="@+id/toff"
                    android:layout_marginTop="10dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/top3"/>
                </androidx.cardview.widget.CardView>


                <TextView

                    android:id="@+id/textview11"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text=" Marque :"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/toff"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>



                <TextView
                    android:id="@+id/textview12"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Addresse:"
                    android:layout_toEndOf="@+id/toff"
                    android:layout_below="@id/textview11"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/textview13"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Matricule : "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_below="@id/textview12"
                    android:textColor="@color/black"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/textview14"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Numero_carte :"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textview13"
                    android:textColor="@color/black"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/textview21"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="Marque "
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/textview11"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"/>



                <TextView
                    android:id="@+id/textview22"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="Addresse Admin"
                    android:layout_below="@id/textview21"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/textview12"
                    android:textColor="@color/white"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/textview23"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="Service Admin "
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/textview13"
                    android:layout_below="@id/textview22"
                    android:textColor="@color/white"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/textview24"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="numero Carte"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/textview14"
                    android:layout_below="@+id/textview23"
                    android:textColor="@color/white"
                    android:gravity="center"/>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editNom"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editAddresse"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editer"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editeService"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editService"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Renseignez_vous!"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:visibility="gone"
            android:id="@+id/editNumero"/>







    </LinearLayout>





</RelativeLayout>