<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/top0"
    tools:context=".Taximan">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_marginTop="35dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:src="@drawable/top5"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mot1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Registration space"
        android:textStyle="bold"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/teal_700"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/mot2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Numero"
        android:inputType="number"
        android:padding="5dp"
        android:layout_below="@+id/mot1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mot3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nom"
        android:padding="5dp"
        android:inputType="text"
        android:layout_below="@+id/mot2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mot4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Prenom"
        android:padding="5dp"
        android:inputType="text"
        android:layout_below="@+id/mot3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />



    <EditText
        android:id="@+id/mot5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Addresse"
        android:padding="5dp"
        android:inputType="text"
        android:layout_below="@+id/mot4"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/mot6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Numero"
        android:inputType="number"
        android:padding="5dp"
        android:layout_below="@+id/mot5"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linear"
        android:layout_below="@+id/mot6"
        android:orientation="horizontal">


        <Button
            android:id="@+id/addUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/teal_700"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/delAllUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:backgroundTint="#E91E63"
            android:padding="5dp"
            android:text="delete All"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.804" />

        <Button
            android:id="@+id/updateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/teal_700"
            android:text="update"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addUser"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/clearUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.804" />

        <Button
            android:id="@+id/readUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/teal_700"
            android:text="read"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/updateUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.804" />

        <Button
            android:id="@+id/clearUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:backgroundTint="#ECB102"
            android:padding="5dp"
            android:text="Clear"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/searchUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:backgroundTint="@color/teal_700"
            android:text="search"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/addUser"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toEndOf="@+id/clearUser"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>