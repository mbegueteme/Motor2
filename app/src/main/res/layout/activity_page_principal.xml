<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@drawable/top0"
    android:layout_height="wrap_content"
    tools:context=".PagePrincipal">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:gravity="center"
       android:layout_marginTop="20dp"
       android:textStyle="bold"
       android:text="Mes operations"
       android:textColor="@color/teal_700"
       android:textSize="25dp"
       />

   <androidx.cardview.widget.CardView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="100dp"
      android:id="@+id/cardview1"
       app:cardBackgroundColor="@color/teal_700"
      app:cardCornerRadius="20dp">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:scaleType="centerCrop"
          android:id="@+id/adminimg"
         android:src="@drawable/admin"/>
   </androidx.cardview.widget.CardView>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
      android:gravity="center"
      android:text="Admin"
       android:id="@+id/admintxt"
      android:textColor="@color/teal_700"
      android:textSize="18dp"
      android:layout_below="@+id/cardview1"/>

   <androidx.cardview.widget.CardView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="100dp"
       android:id="@+id/cardview2"
       app:cardBackgroundColor="@color/teal_700"
       app:cardCornerRadius="20dp">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:id="@+id/usersimg"
          android:src="@drawable/taximan"/>
   </androidx.cardview.widget.CardView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:gravity="center"
       android:text="Users"
       android:id="@+id/userstxt"
       android:textColor="@color/teal_700"
       android:textSize="18dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/cardview2"/>

   <androidx.cardview.widget.CardView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_alignParentRight="true"
       android:layout_marginTop="100dp"
       android:layout_marginRight="10dp"
       android:id="@+id/cardview3"
       app:cardBackgroundColor="@color/teal_700"
       app:cardCornerRadius="20dp">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:id="@+id/motoimg"
          android:padding="4dp"
          android:src="@drawable/moto"/>
   </androidx.cardview.widget.CardView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:gravity="center"
       android:text="Moto"
       android:id="@+id/mototxt"
       android:layout_marginRight="10dp"
       android:layout_alignParentRight="true"
       android:textColor="@color/teal_700"
       android:textSize="18dp"
       android:layout_below="@+id/cardview3"/>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/fonction"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:layout_alignParentBottom="true"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="@drawable/round"
       android:layout_marginBottom="10dp"
       android:backgroundTint="@color/teal_700">

      <androidx.cardview.widget.CardView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:id="@+id/cardview4"
          android:layout_centerVertical="true"
          app:cardBackgroundColor="@color/teal_700"
          app:cardCornerRadius="15dp">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:padding="3dp"
             android:id="@+id/call"
             android:src="@drawable/call"/>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="20dp"
          android:id="@+id/cardview5"
          app:cardBackgroundColor="@color/teal_700"
          app:cardCornerRadius="15dp">
         <ImageView
             android:id="@+id/message"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:padding="3dp"

             android:src="@drawable/mesenger"/>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="20dp"
          android:id="@+id/cardview6"
          app:cardBackgroundColor="@color/teal_700"
          app:cardCornerRadius="15dp">
         <ImageView
             android:id="@+id/share"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:padding="3dp"
             android:src="@drawable/share"/>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="20dp"
          android:id="@+id/cardview7"
          app:cardBackgroundColor="@color/teal_700"
          app:cardCornerRadius="15dp">
         <ImageView
             android:id="@+id/email"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:padding="3dp"
             android:src="@drawable/email"/>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="20dp"
          android:id="@+id/cardview8"
          app:cardBackgroundColor="@color/teal_700"
          app:cardCornerRadius="15dp">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:padding="3dp"
             android:src="@drawable/adminn"/>
      </androidx.cardview.widget.CardView>





   </LinearLayout>

   <EditText
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:inputType="number"
       android:id="@+id/numberID"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/admintxt"
       android:layout_marginTop="50dp"
       android:hint="enter your number"
       android:textColor="@color/black"/>


</RelativeLayout>